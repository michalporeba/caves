map pit-map 
	plan@top.cave
	break
	plan@attic.cave
	#plan@rift.cave
	#plan@pit.cave
	#plan@pit2.cave
	break
	#spider-dig@pit.cave
	break
	under-the-attic@attic.cave
	
	plan@homm.cave
	break
endmap

map other-scraps
	plan@attic.cave
	break
	under-the-attic@attic.cave
	plan@top.cave
	break
	plan@homm.cave
	break
	plan@rift.cave
	break
	mini@rift.cave
	break 
	plan@birthday.cave
	break
	plan@flake.cave
	break 
endmap

map dig-map -title "Ogof New Park (2024-07-14)"
	entrance-map #[-5 0 m] above
	other-scraps
	pit-map
